{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Debug build for Linux",
            "inherits": "debug-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "description": "Release build for Linux",
            "inherits": "release-base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "description": "Debug build for Windows",
            "inherits": "debug-base",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "set"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "description": "Release build for Windows",
            "inherits": "release-base",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "set"
            }
        },
        {
            "name": "ci-linux",
            "displayName": "CI Linux",
            "description": "CI build for Linux",
            "inherits": "linux-release",
            "cacheVariables": {
                "NAMIGATOR_BUILD_PYTHON": "ON",
                "NAMIGATOR_BUILD_C_API": "ON",
                "NAMIGATOR_BUILD_EXECUTABLES": "ON",
                "NAMIGATOR_INSTALL_TESTS": "ON"
            }
        },
        {
            "name": "ci-windows",
            "displayName": "CI Windows",
            "description": "CI build for Windows",
            "inherits": "windows-release",
            "cacheVariables": {
                "NAMIGATOR_BUILD_PYTHON": "ON",
                "NAMIGATOR_BUILD_C_API": "ON",
                "NAMIGATOR_BUILD_EXECUTABLES": "ON",
                "NAMIGATOR_INSTALL_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release"
        },
        {
            "name": "ci-linux",
            "configurePreset": "ci-linux"
        },
        {
            "name": "ci-windows",
            "configurePreset": "ci-windows"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "linux-debug",
            "inherits": "test-base",
            "configurePreset": "linux-debug"
        },
        {
            "name": "linux-release",
            "inherits": "test-base",
            "configurePreset": "linux-release"
        },
        {
            "name": "windows-debug",
            "inherits": "test-base",
            "configurePreset": "windows-debug"
        },
        {
            "name": "windows-release",
            "inherits": "test-base",
            "configurePreset": "windows-release"
        }
    ]
}